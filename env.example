# ----- REQUIRED -----
# ClickUp Personal API Token (Settings -> Apps -> API Token)
CLICKUP_TOKEN=pk_xxxxxxxxxxxxxxxxxxxxxxxxx

# Your Workspace (team) ID. If left blank, the script will list your available IDs and exit.
CLICKUP_TEAM_ID=12345678

# Discord Webhook URL for the channel where you want to post
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/yyy

# ----- OPTIONAL -----
# How many days ahead to check (default 3)
DAYS_AHEAD=3

# Only include tasks assigned to you (true/false, default false)
ONLY_ASSIGNED_TO_ME=false

# Include closed tasks in the results (true/false, default false)
INCLUDE_CLOSED=false
